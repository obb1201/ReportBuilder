@{
    ViewData["Title"] = "Filter Builder Test";
}

<h2>
    <i class="bi bi-funnel"></i> Filter Builder Test Page
</h2>
<p class="text-muted">Test the filter builder component independently</p>

<div class="row mt-4">
    <div class="col-md-12">
        <!-- Filter Builder Component -->
        <div class="card">
            <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-funnel-fill"></i> Filters</h5>
                <button class="btn btn-sm btn-dark" id="addFilterBtn">
                    <i class="bi bi-plus-circle"></i> Add Filter
                </button>
            </div>
            <div class="card-body">
                <div id="filtersContainer">
                    <!-- Filters will be added here -->
                </div>
                
                <div id="noFiltersMessage" class="text-muted text-center py-3">
                    <i class="bi bi-funnel" style="font-size: 2rem;"></i>
                    <p class="mt-2">No filters applied. Click "Add Filter" to start filtering results.</p>
                </div>

                <!-- AND/OR Logic Selector (shown when multiple filters) -->
                <div id="filterLogicContainer" class="mt-3 d-none">
                    <label class="form-label fw-bold">Filter Logic:</label>
                    <div class="btn-group" role="group">
                        <input type="radio" class="btn-check" name="filterLogic" id="filterLogicAnd" value="AND" checked>
                        <label class="btn btn-outline-primary" for="filterLogicAnd">AND (All must match)</label>
                        
                        <input type="radio" class="btn-check" name="filterLogic" id="filterLogicOr" value="OR">
                        <label class="btn btn-outline-primary" for="filterLogicOr">OR (Any can match)</label>
                    </div>
                    <small class="form-text text-muted d-block mt-1">
                        <strong>AND:</strong> Records must match all filters | 
                        <strong>OR:</strong> Records can match any filter
                    </small>
                </div>
            </div>
        </div>

        <!-- Generated WHERE Clause Preview -->
        <div class="card mt-3">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0"><i class="bi bi-code-square"></i> WHERE Clause Preview</h5>
            </div>
            <div class="card-body">
                <pre id="whereClausePreview" class="bg-light p-3 rounded mb-0"><code>No filters applied</code></pre>
            </div>
        </div>

        <!-- Test Object Selection -->
        <div class="card mt-3">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-box"></i> Test with Object</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label for="testObjectSelect" class="form-label">Select Object to Load Fields:</label>
                    <select class="form-select" id="testObjectSelect">
                        <option value="">Choose an object...</option>
                        <option value="Account">Account</option>
                        <option value="Contact">Contact</option>
                        <option value="Opportunity">Opportunity</option>
                        <option value="Lead">Lead</option>
                        <option value="Case">Case</option>
                    </select>
                </div>
                <button class="btn btn-primary" id="loadFieldsBtn" disabled>
                    <i class="bi bi-download"></i> Load Fields
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/filter-builder.js" asp-append-version="true"></script>
    <script>
        // Test page initialization
        $(document).ready(function() {
            // Enable load button when object selected
            $('#testObjectSelect').on('change', function() {
                $('#loadFieldsBtn').prop('disabled', !$(this).val());
            });

            // Load fields for testing
            $('#loadFieldsBtn').on('click', function() {
                const objectName = $('#testObjectSelect').val();
                if (objectName) {
                    window.FilterBuilder.loadObjectFields(objectName);
                }
            });
        });
    </script>
}
