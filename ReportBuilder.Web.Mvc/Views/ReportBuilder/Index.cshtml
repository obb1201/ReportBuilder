@{
    ViewData["Title"] = "Report Builder";
}

<div class="report-builder-container">
    <!-- Header -->
    <div class="report-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-1">
                    <i class="bi bi-file-earmark-bar-graph"></i> Report Builder
                </h2>
                <p class="text-muted mb-0">Build custom Salesforce reports with drag & drop</p>
            </div>
            <div class="d-flex gap-2">
                <button class="btn btn-outline-secondary" id="resetBtn">
                    <i class="bi bi-arrow-clockwise"></i> Reset
                </button>
                <button class="btn btn-secondary" id="saveReportBtn" disabled>
                    <i class="bi bi-save"></i> Save
                </button>
                <button class="btn btn-primary" id="runQueryBtn" disabled>
                    <i class="bi bi-play-circle"></i> Run
                </button>
            </div>
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="report-content">
        <div class="report-grid">
            <!-- Panel 1: Object Selection -->
            <div class="panel panel-object">
                <div class="panel-header">
                    <i class="bi bi-box"></i> Objects
                </div>
                <div class="panel-body">
                    <div class="search-box mb-3">
                        <i class="bi bi-search"></i>
                        <input type="text" id="objectSearch" placeholder="Search objects..." class="form-control form-control-sm">
                    </div>
                    <div class="object-list" id="objectList">
                        <div class="text-center text-muted py-3">
                            <div class="spinner-border spinner-border-sm" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-2 mb-0">Loading objects...</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Panel 2: Column Selection -->
            <div class="panel panel-columns">
                <div class="panel-header">
                    <i class="bi bi-columns"></i> Available Columns
                </div>
                <div class="panel-body">
                    <div class="search-box mb-3">
                        <i class="bi bi-search"></i>
                        <input type="text" id="columnSearch" placeholder="Search columns..." class="form-control form-control-sm">
                    </div>
                    <div class="column-list" id="columnList">
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-columns" style="font-size: 2rem;"></i>
                            <p class="mt-2 mb-0">Select an object to view columns</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Panel 3: Filter Criteria -->
            <div class="panel panel-filters">
                <div class="panel-header d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-funnel"></i> Filter Criteria</span>
                    <button class="btn btn-sm btn-light" id="addFilterBtn" disabled>
                        <i class="bi bi-plus"></i>
                    </button>
                </div>
                <div class="panel-body">
                    <div id="filtersContainer">
                        <!-- Filters will be added here -->
                    </div>
                    
                    <div id="noFiltersMessage" class="text-center text-muted py-4">
                        <i class="bi bi-funnel" style="font-size: 2rem;"></i>
                        <p class="mt-2 mb-0">No filters applied</p>
                        <small>Select an object and click + to add filters</small>
                    </div>

                    <!-- AND/OR Logic -->
                    <div id="filterLogicContainer" class="mt-3 d-none">
                        <div class="btn-group btn-group-sm w-100" role="group">
                            <input type="radio" class="btn-check" name="filterLogic" id="filterLogicAnd" value="AND" checked>
                            <label class="btn btn-outline-primary" for="filterLogicAnd">AND</label>
                            
                            <input type="radio" class="btn-check" name="filterLogic" id="filterLogicOr" value="OR">
                            <label class="btn btn-outline-primary" for="filterLogicOr">OR</label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Panel 4: Report Template -->
            <div class="panel panel-report">
                <div class="panel-header d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-file-text"></i> Report Template</span>
                    <div class="d-flex gap-2 align-items-center">
                        <label class="mb-0 me-2" style="font-size: 0.875rem; font-weight: normal;">
                            <i class="bi bi-list-ol"></i> Page Size:
                        </label>
                        <select id="pageSizeSelect" class="form-select form-select-sm" style="width: 100px;">
                            <option value="10">10</option>
                            <option value="25" selected>25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                            <option value="200">200</option>
                            <option value="500">500</option>
                        </select>
                    </div>
                </div>
                <div class="panel-body">
                    <!-- Selected Columns (Drag & Drop) -->
                    <div class="report-columns" id="reportColumns">
                        <div id="noColumnsMessage" class="text-center text-muted py-4">
                            <i class="bi bi-file-text" style="font-size: 2rem;"></i>
                            <p class="mt-2 mb-0">No columns selected</p>
                            <small>Click on columns from the Available Columns panel</small>
                        </div>
                    </div>

                    <!-- SOQL Query Preview -->
                    <div class="query-preview mt-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <strong><i class="bi bi-code-square"></i> SOQL Query</strong>
                            <button class="btn btn-sm btn-outline-secondary" id="copyQueryBtn" disabled>
                                <i class="bi bi-clipboard"></i> Copy
                            </button>
                        </div>
                        <pre id="queryPreview" class="query-code"><code>Select an object and add columns to generate a query</code></pre>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Sortable.js for drag & drop -->
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
    <script src="~/js/filter-builder.js" asp-append-version="true"></script>
    <script src="~/js/report-builder-v2.js" asp-append-version="true"></script>
}

